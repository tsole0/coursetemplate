\newcommand{\Bu}{\ch{Bu}}          % Butyl
\newcommand{\Ph}{\ch{Ph}}          % Phenyl
\newcommand{\Bn}{\ch{Bn}}          % Benzyl
\newcommand{\Ac}{\ch{Ac}}          % Acetyl
\newcommand{\Ts}{\ch{Ts}}          % Tosyl
\newcommand{\Ms}{\ch{Ms}}          % Mesyl

% Common reagents and conditions
\newcommand{\THF}{\ch{THF}}
\newcommand{\DCM}{\ch{CH2Cl2}}
\newcommand{\DMSO}{\ch{DMSO}}
\newcommand{\DMF}{\ch{DMF}}
\newcommand{\EtOH}{\ch{EtOH}}
\newcommand{\MeOH}{\ch{MeOH}}

% Reaction arrows with conditions
\newcommand{\heatarrow}{\ch{->[\heatcondition]}}
\newcommand{\acidarrow}{\ch{->[H+]}}
\newcommand{\basearrow}{\ch{->[OH-]}}

